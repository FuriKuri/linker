<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

  <context-param>
    <param-name>linkConfig</param-name>
    <param-value>classpath:/example.links</param-value>
  </context-param>

  <listener>
    <listener-class>io.github.furikuri.linker.Linker</listener-class>
  </listener>

</web-app>
